<div class="page-header"> </div>


<% @statuses.each do |status| %>
	<div class="status">
		<div class="row">
			
			<div class="span1">
				<%= image_tag status.user.gravatar_url %>
			</div>

			<div class="span7">

			<strong><%=  status.user.profil_name %> </strong>

			<p><%= status.content %></p>
			<div class="meta">
	    	<%=link_to time_ago_in_words(status.created_at) + " ago.", status %>
	    	<span class="admin">
	      | <%= link_to "edit.", edit_status_path(status) %> | <%= link_to 'kill.', status, method: :delete, data: { confirm: 'sicher.?' } %>
	    	
			</span>	
			</div>
		</div>
	</div>
</div>

<% end %>